
Vagrant.configure(2) do |config|
    config.vm.define "backend" do |backend|
     backend.vm.box = "c7_base.box"
     #backend.ssh.username = 'root'
     backend.vm.network "private_network", ip: "192.168.56.120", auto_config: false
     backend.vm.network "forwarded_port", guest: 22, host: 6666, id: "ssh", auto_correct: true
     backend.vm.network "forwarded_port", guest: 3306, host: 3306 , id: "mariadb", auto_correct: true
     config.vm.provision "shell",
      inline: "yum -y install mariadb-server mariadb;systemctl start mariadb;systemctl enable mariadb"
     end
  end